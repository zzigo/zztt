<script is:inline>
  if (!window.__zzttShortcutsInstalled) {
    window.__zzttShortcutsInstalled = true;

    document.addEventListener('keydown', (e) => {
      if (
        e.repeat ||
        !(e.target instanceof HTMLElement) ||
        e.target.matches('input, textarea') ||
        e.metaKey || e.ctrlKey || e.altKey
      ) return;

      switch (e.key) {
        case 'p':
          window.location.href = '/plain';
          break;
        case 'l':
          window.location.href = '/listen';
          break;
        case 'c':
          window.location.href = '/calendar';
          break;
		case 'w':
          window.location.href = '/list-of-works';
          break;
		  case 'y':
          window.location.href = '/list-of-works?view=year';
          break;
		  case 't':
		  window.location.href = '/list-of-works?view=type';
		  break;
        default:
          break;
      }
    });
  }
</script>

<style>
