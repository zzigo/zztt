---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection, getEntry } from 'astro:content';

const posts = (await getCollection('research'))
  .filter((post) => post.id !== 'research-statement.md')
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const researchStatementEntry = await getEntry('research', 'research-statement');
const { Content } = await researchStatementEntry.render();

// Extract year from date
const getYear = (date: Date) => {
	return date.getFullYear();
};
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			body {
				background-color: #000;
				color: #e0e0e0;
			}
			main {
				max-width: 960px;
				margin: 0 auto;
				padding: 4rem 2rem 2rem 2rem;
			}
			.research-list {
				list-style-type: none;
				margin-top: 100px;
				padding: 0;
				display: flex;
				flex-direction: column;
				gap: 2rem;
			}
			.research-item {
				display: flex;
				gap: 1.5rem;
				align-items: flex-start;
				transition: opacity 0.2s ease;
			}
			.research-item:hover {
				opacity: 0.85;
			}
			.research-image {
				flex-shrink: 0;
				width: 250px;
				height: 125px;
				overflow: hidden;
				border-radius: 8px;
			}
			.research-image img {
				width: 100%;
				height: 100%;
				object-fit: cover;
				display: block;
			}
			.research-content {
				flex: 1;
				min-width: 0;
			}
			.research-title {
				margin: 0 0 0.5rem 0;
				font-size: 1.5rem;
				font-weight: 400;
				line-height: 1.3;
			}
			.research-title a {
				color: #999;
				text-decoration: none;
				transition: color 0.2s ease;
			}
			.research-title a:hover {
				color: #fff;
			}
			.research-year {
				margin: 0 0 0.75rem 0;
				color: #666;
				font-size: 0.95rem;
			}
			.research-description {
				margin: 0;
				color: #aaa;
				line-height: 1.6;
				font-size: 0.95rem;
			}
			@media (max-width: 720px) {
				.research-item {
					flex-direction: column;
					gap: 1rem;
				}
				.research-image {
					width: 100%;
					height: auto;
					aspect-ratio: 2 / 1;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<Content />
			<section>
				<ul class="research-list">
					{
						posts.map((post) => (
							<li class="research-item">
								<div class="research-image">
									<a href={`/research/${post.id.replace(/\.md$/, '')}/`}>
										<img src={post.data.heroImage} alt={post.data.title} />
									</a>
								</div>
								<div class="research-content">
									<h2 class="research-title">
										<a href={`/research/${post.id.replace(/\.md$/, '')}/`}>{post.data.title}</a>
									</h2>
									<p class="research-year">{getYear(post.data.pubDate)}</p>
									<p class="research-description">{post.data.description}</p>
								</div>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
