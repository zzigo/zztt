---
import { type CollectionEntry, getCollection } from 'astro:content';
import BlogPost from '../../layouts/BlogPost.astro';
import EventsList from '../../components/EventsList.astro';
import { render } from 'astro:content';
import ContentGallery from '../../components/ContentGallery.jsx';


export async function getStaticPaths() {
	const posts = await getCollection('works');
	// Generate all possible slug variations (lowercase, original case)
	const paths: Array<{ params: { slug: string }; props: CollectionEntry<'works'> }> = [];
	
	posts.forEach((post) => {
		const originalSlug = post.id.replace(/\.md$/, '');
		const normalizedSlug = originalSlug.toLowerCase().replace(/\s+/g, '-');
		
		// Add the normalized lowercase version as primary
		paths.push({
			params: { slug: normalizedSlug },
			props: post,
		});
		
		// Also add original case version if different
		if (originalSlug !== normalizedSlug) {
			paths.push({
				params: { slug: originalSlug.replace(/\s+/g, '-') },
				props: post,
			});
		}
	});
	
	return paths;
}
type Props = CollectionEntry<'works'>;

const post = Astro.props;
const { Content } = await render(post);

// Get events for this work
const allEvents = await getCollection('events');
const workTitle = post.data.title.toLowerCase();
const workEvents = allEvents.filter(event => {
    const eventWorks = event.data.work;
    if (Array.isArray(eventWorks)) {
        return eventWorks.some(w => w.toLowerCase() === workTitle);
    } else if (typeof eventWorks === 'string') {
        return eventWorks.toLowerCase() === workTitle;
    }
    return false;
});
const hasEvents = workEvents.length > 0;
---

<BlogPost {...post.data}>
	<Content />
	
	{hasEvents && (
		<section class="work-events-section">
			<h2>Performances & Events</h2>
			<EventsList filterByWork={post.data.title} showFilters={false} />
		</section>
	)}
	<ContentGallery client:load />
</BlogPost>


<style>
	.work-events-section {
		margin-top: 4rem;
		padding-top: 3rem;
		border-top: 2px solid var(--border, #ddd);
	}

	.work-events-section h2 {
		font-size: 2rem;
		margin-bottom: 2rem;
		color: var(--text);
	}
</style>
