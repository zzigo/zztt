---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'research'>['data'];

const { title, description, pubDate, updatedDate, heroImage, doi } = Astro.props;
---

<html lang="en" class="dark">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
				background-color: var(--background);
				color: var(--text);
			}
			.hero-image {
				width: 100%;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: 0 2px 8px rgba(0, 0, 0, 0.5);
			}
			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1em;
				color: var(--text);
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
				color: var(--text);
			}
			.date {
				margin-bottom: 0.5em;
				color: var(--text-muted);
			}
			.last-updated-on {
				font-style: italic;
				color: var(--text-muted);
			}
			.doi-link {
				display: inline-flex;
				align-items: center;
				gap: 0.5em;
				color: var(--accent);
				text-decoration: none;
				transition: color 0.2s ease;
				margin-top: 1em;
			}
			.doi-link:hover {
				color: var(--accent-dark);
			}
			.doi-link i {
				font-size: 1.2em;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-image">
					{heroImage && <img width={1020} height={510} src={heroImage} alt="" />}
				</div>
				<div class="prose">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
							{
								doi && (
									<a href={`https://doi.org/${doi}`} target="_blank" class="doi-link">
										<i class="fas fa-link"></i>
										DOI: {doi}
									</a>
								)
							}
						</div>
						<h1>{title}</h1>
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
